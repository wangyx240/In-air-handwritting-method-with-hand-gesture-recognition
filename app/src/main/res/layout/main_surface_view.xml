<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical" >

            <!--  <org.opencv.android.JavaCameraView-->
            <com.mx.krakensoft.opencv.CustomSufaceView
                android:id="@+id/main_surface_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                opencv:camera_id="any"
                opencv:show_fps="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:rotation="0"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:translationX="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/min_treshold"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:visibility="invisible" />


                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:max="60000"
                    android:visibility="invisible" />
                <TextView
                android:id="@+id/textViewOfResult"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:rotation="0"
                android:text="result"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textSize="40dp"
                android:visibility="visible" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <Button
                    android:id="@+id/button_1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="clean"
                    android:layout_gravity="bottom"/>

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="store"
                    android:layout_gravity="bottom"/>

                    <Button
                        android:id="@+id/button_3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="delete"
                        android:layout_gravity="bottom"/>
                    <Button
                        android:id="@+id/button_4"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="space"
                        android:layout_gravity="bottom"/>
            </LinearLayout>




            </LinearLayout>
            <TextView
            android:id="@+id/numberOfFingers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="0dp"
            android:layout_gravity="bottom"
            android:text="0"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            android:textSize="50dp"
            android:visibility="invisible" />



        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
